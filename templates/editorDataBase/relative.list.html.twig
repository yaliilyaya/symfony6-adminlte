{% extends '@Symfony6AdminLte/layout.html.twig' %}

{% block page_content %}

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Название</h3>
            <div class="card-tools btn-group">
            </div>
        </div>

        <div class="card-body">
            <table class="table table-bordered table-hover dataTable">
                <thead>
                <tr role="row">
                    <th>columnFrom</th>
                    <th>columnTo</th>
                    <th>Tools</th>
                </tr>
                </thead>
                <tbody>
                {% for relative in relatives %}
                    <tr role="row" class="odd">
                        <td>{{ relative.columnFrom.table.label }} - {{ relative.columnFrom.label }}</td>
                        <td>{{ relative.columnTo.table.label }} - {{ relative.columnTo.label }}</td>
                        <td>
                            <div class="btn-group btn-group-xs" role="group" aria-label="...">
                                <a class="btn btn-default" href="{{ path('symfony6-adminlte.relativeRemove', {'relativeId': relative.id}) }}"><i class="glyphicon glyphicon-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th>columnFrom</th>
                    <th>columnTo</th>
                    <th>Tools</th>
                </tr>
                </tfoot>
            </table>
        </div>
    </div>
{% endblock %}