{% set flashes = app.flashes  %}
{% if flashes %}

<div id="toastsContainerTopRight" class="toasts-top-right fixed">

    {% set errors = flashes.error | default([])  %}
    {% for error in errors %}
    <div class="toast bg-danger fade show" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header"><strong class="mr-auto">Ошибка</strong>
        </div>
        <div class="toast-body" style="min-width: 500px">{{ error }}</div>
    </div>
    {% endfor %}

    {% set successes = flashes.success | default([])  %}
    {% for success in successes %}
        <div class="toast bg-success fade show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header"><strong class="mr-auto">Успешно</strong>
            </div>
            <div class="toast-body" style="min-width: 500px">{{ success }}</div>
        </div>
    {% endfor %}

    {% set notices = flashes.notice | default([])  %}
    {% for notice in notices %}
        <div class="toast bg-info fade show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header"><strong class="mr-auto">Уведомление</strong>
            </div>
            <div class="toast-body" style="min-width: 500px">{{ notice }}</div>
        </div>
    {% endfor %}
</div>
{% endif %}

