{% extends '@Symfony6AdminLte/layout.html.twig' %}

{% block title %} Пакет {% endblock %}

{% block page_content %}
    <form method="post">
        <div  class="card">
            <div class="card-header">
                Пакет
                <div class="card-tools btn-group">
                    {#                <button class="btn btn-info btn-sm" type="submit">Сохранить изменения</button>#}
                </div>
            </div>
            <div class="card-body">
                {% for fieldName, field in config.fields %}
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">{{fieldName}}</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="params[{{fieldName}}]" value="{{field.value | default}}">
                    </div>
                </div>
                {% endfor%}
            </div>
        </div>
        <div  class="card">
            <div class="card-body p-0">
                <textarea class="form-control"
                          style="height: 700px"
                          name="data"
                >{{ packet }}</textarea>
            </div>
        </div>
    </form>


{% endblock %}